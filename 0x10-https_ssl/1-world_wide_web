#!/usr/bin/env bash
# subdomins

function(){
    commands=$(dig $1.$2 | grep -A1 'ANSWER SECTION:')
    echo $commands | awk '{print "The subdomain '$1' is a "$4" record and points to "$5}'
}

if [ $2 ]
then
    function $1 $2
else
    function $1 www
    function $1 lb-01
    function $1 web-01
    function $1 web-02
fi