#!/usr/bin/env bash
# Bash script that will display function_test about commands
function_test ()
{
    dom="$1"
    sub="$2"
    dig "$sub.$dom" | awk '/ANSWER SECTION:/{getline; printf "The subdomain %s is a %s record and points to %s\n", su, $4, $5}' su="$sub"
}

for sub in "www" "lb-01" "web-01" "web-02"
do
    if [ -z "$2" ] || [ "$2" == "$sub" ] ;
    then
	display_info "$1" "$sub"
    fi
done